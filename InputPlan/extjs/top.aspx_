function renderNumber( value )
{
    if( value == null ) return '';
    try{
	if( value.indexOf( '.' ) >= 0 )
	    return Ext.util.Format.number(value, '0,000.00');
	return Ext.util.Format.number(value, '0,000');
    }catch(e){
	return value;
    }
