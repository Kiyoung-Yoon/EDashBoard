            select_tree_record = record.data;
        }

        Ext.Ajax.request({
            url:'/Process.aspx?action=ClsIns',
            params: { 'OBJECT_ID' : select_tree_record.OBJECT_ID , 'CATE_NAME' : text },
	        method:'GET',
